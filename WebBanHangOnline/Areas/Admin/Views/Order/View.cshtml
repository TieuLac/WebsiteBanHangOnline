@model WebBanHangOnline.Models.EF.Order
@using PagedList;
@{
    ViewBag.Title = "Chi tiết đơn hàng";
}
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Chi tiết đơn hàng</a>
        </li>
    </ul>
}

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Chi tiết đơn hàng</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Mã đơn hàng</label>
                        <p class="form-control">@Model.Code</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Họ tên khách</label>
                        <p class="form-control">@Model.CustomerName</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Tổng tiền</label>
                        <p class="form-control">@WebBanHangOnline.Common.Common.FormatNumber(Model.TotalAmount, 0) đ</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Số điện thoại</label>
                        <p class="form-control">@Model.Phone</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Ngày tạo</label>
                        <p class="form-control">@Model.CreatedDate.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email</label>
                        <p class="form-control">@Model.Email</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Thanh toán</label>
                        <p class="form-control">
                            @if (Model.Status == 1)
                            {
                                <span style="color:blueviolet"><b>Chưa thanh toán</b></span>
                            }
                            @if (Model.Status == 2)
                            {
                                <span style="color:cadetblue"><b>Đã thanh toán</b></span>
                            }
                        </p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Trạng thái</label>
                        <p class="form-control">
                            @if (Model.OrderStatus == 1)
                            {
                                <span style="color:blueviolet"><b>Chưa thanh toán</b></span>
                            }
                            @if (Model.OrderStatus == 2)
                            {
                                <span style="color:cadetblue"><b>Đã thanh toán</b></span>
                            }
                            @if (Model.OrderStatus == 3)
                            {
                                <span style="color:forestgreen"><b>Hoàn thành</b></span>
                            }
                            @if (Model.OrderStatus == 4)
                            {
                                <span style="color:red"><b>Hủy</b></span>
                            }
                            @if (Model.OrderStatus == 5)
                            {
                                <span style="color:goldenrod"><b>Đang giao</b></span>
                            }
                            @if (Model.OrderStatus == 6)
                            {
                                <span style="color:palevioletred"><b>Đang chuẩn bị hàng</b></span>
                            }
                            @if (Model.OrderStatus == 7)
                            {
                                <span style="color: orange"><b>Giao hàng không thành công</b></span>
                            }
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <h2>Danh sách sản phẩm</h2>
                </div>
                <div class="col-12">
                    @Html.Action("Partial_SanPham", "Order", new { id = Model.Id })
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->