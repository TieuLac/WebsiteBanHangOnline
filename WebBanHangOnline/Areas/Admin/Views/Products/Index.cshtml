@model PagedList.PagedList<WebBanHangOnline.Models.EF.Product>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/products" class="nav-link">Sản phẩm</a>
        </li>
    </ul>
}
<link rel="stylesheet" href="https://code.jquery.com/ui/1.14.0/themes/base/jquery-ui.css">
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Sản phẩm</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách sản phẩm</h3>

            <div class="card-tools">
                <a href="/admin/products/add" class="btn btn-primary">Thêm mới</a>
                <a href="#" class="btn btn-danger" id="BtnDeleteAll">Xóa</a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    @using (Html.BeginForm("index", "Products", FormMethod.Get, new { }))
                    {
                        <div class="input-group input-group-sm">
                            @*@Html.TextBox("Searchtext")*@
                            @Html.TextBox("Searchtext", null, new { @class = "form-control", placeholder = "Nhập từ khóa tìm kiếm..." })
                            @*<input type="text" name="searchtext" class="form-control">*@
                            <span class="input-group-append">
                                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                            </span>
                        </div>
                    }
                </div>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="SelectAll" /></th>
                        <th>STT</th>
                        <th>Hình ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Danh mục</th>
                        @*<th>Số lượng</th>*@
                        <th>Giá</th>
                        <th>Ngày tạo</th>
                        <th>Home</th>
                        <th>Hot</th>
                        <th>Hiển thị</th>
                        <th style="width:150px"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                        foreach (var item in Model)
                        {
                            var strCheck = item.IsActive ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";
                            var strCheckHome = item.IsHome ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";
                            var strCheckHot = item.IsHot ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";
                            <tr id="trow_@item.Id">
                                <td><input type="checkbox" class="cbkItem" value="@item.Id" /></td>
                                <td>@i</td>
                                <td><img class="imgproduct" data-id="@item.Id" src="@item.ProductImage.FirstOrDefault(x=>x.IsDefault).Image" style="width:100px;height:100px;object-fit:contain" /></td>
                                <td>@(item.Title.Length > 22 ? item.Title.Substring(0, 22) + "..." : item.Title)</td>
                                <td>@item.ProductCategory.Title</td>
                                @*<td>@item.Quatity</td>*@
                                <td>@item.Price</td>
                                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td class="text-center">
                                    <a href='#' data-id="@item.Id" class="btnHome">@Html.Raw(strCheckHome)</a>
                                </td>
                                <td class="text-center">
                                    <a href='#' data-id="@item.Id" class="btnHot">@Html.Raw(strCheckHot)</a>
                                </td>
                                <td class="text-center">
                                    <a href='#' data-id="@item.Id" class="btnActive">@Html.Raw(strCheck)</a>
                                </td>
                                <td>
                                    <a href="/admin/products/edit/@item.Id" class="btn btn-sm btn-primary">Sửa</a>
                                    <a href="#" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản ghi nào!</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="row">
                <div class="col-6"></div>
                <div class="col-6" style="text-align:right">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

<div id="dialog">
    <iframe id="myIframe" style="border:0;width:100%;height:100%"></iframe>
</div>
@section scripts{
    <script src="https://code.jquery.com/ui/1.14.0/jquery-ui.js"></script>
    <script>
        $(document).ready(function () {

            //hiển thị form upload ảnh
            $('#dialog').dialog({
                autoOpen: false,
                position: { my: "center", at: "center", of: window },
                show: "fade",
                hide: "fade",
                modal: true,
                height: '600',
                width: '700',
                resizable: true,
                title: 'Quản lý ảnh sản phẩm',
                close: function () {
                    window.location.reload();
                }
            });
            $('body').on("click", ".imgproduct", function () {
                var proid = $(this).attr('data-id');
                $("#dialog #myIframe").attr("src", "/admin/ProductImages/Index?id=" + proid);
                $('#dialog').dialog('open');
                return false;
            });

            //Xóa nhiều sản phẩm

            //$('body').on('change', '#SelectAll', function () {
            //    var checkStatus = this.checked;
            //    var checkbox = $(this).parents('.card-body').find('tr td input:checkbox');
            //    checkbox.each(function () {
            //        this.checked = checkStatus;
            //        if (this.checked) {
            //            checkbox.attr('selected', 'checked');
            //        } else {

            //        }
            //    });
            //});


                //chọn nhiều checkbox
            $('#SelectAll').on('change', function () {
                $('.cbkItem').prop('checked', $(this).prop('checked'));
            });

                //Xóa tất cả checkbox đã chọn
            $('body').on('click', '#BtnDeleteAll', function (e) {
                e.preventDefault();
                var str = "";
                var checkbox = $(this).parents('.card').find('tr td input:checkbox');
                var i = 0;
                checkbox.each(function () {
                    if (this.checked) {
                        checkbox.attr('selected', 'checked');
                        var _id = $(this).val();
                        if (i === 0) {
                            str += _id;
                        } else {
                            str += "," + _id;
                        }
                        i++;
                    } else {
                        checkbox.attr('selected', '');
                    }
                });
                if (str.length > 0) {
                    var conf = confirm('Bạn có muốn xóa các bản ghi này không?');
                    if (conf === true) {
                        $.ajax({
                            url: '@Url.Action("DeleteAll", "Products")',
                            type: 'POST',
                            data: { ids: str },
                            success: function (rs) {
                                if (rs.success) {
                                    location.reload();
                                }
                            }
                        });
                    }
                }
            });


            //---------------------
            //Xóa sản phẩm
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id");
                var conf = confirm('Bạn có muốn xóa bản ghi này không?');
                if (conf === true) {
                    $.ajax({
                        //url: '/admin/category/delete',
                        url: '@Url.Action("Delete", "Products")',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                            }
                        }
                    });
                }
            });

            //@*$('body').on('click', '.btnActive', function (e) {
            //    e.preventDefault();
            //    var btn = $(this);
            //    var id = btn.data("id");
            //    $.ajax({
            ////            url: '@Url.Action("IsActive", "Products")',
            //            type: 'POST',
            //            data: { id: id },
            //        success: function (rs) {
            //            debugger;
            //            if (rs.success) {
            //                    if (rs.isActive) {
            //                        btn.html("<i class='fa fa-check text-success'></i>");
            //                    } else {
            //                        btn.html("<i class='fas fa-times text-danger'></i>");
            //                    }
            //                }

            //            }
            //        });
            //});*@

            //bật tắt hiển thị sản phẩm
            $('body').on('click', '.btnActive', function (e) {
                //e.prevetDefault();
                var btn = $(this);
                var id = btn.data("id");
                $.ajax({
                    //url: '/admin/category/IsActive',
                    url: '@Url.Action("IsActive", "Products")',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {
                        if (rs.success) {
                            if (rs.isActive) {
                                btn.html("<i class='fa fa-check text-success'></i>")
                            } else {
                                btn.html("<i class='fas fa-times text-danger'></i>")
                            }
                        }
                    }
                });
            }); 

            //bật tắt home 
            $('body').on('click', '.btnHome', function (e) {
                //e.prevetDefault();
                var btn = $(this);
                var id = btn.data("id");
                $.ajax({
                    //url: '/admin/category/IsActive',
                    url: '@Url.Action("IsHome", "Products")',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {
                        if (rs.success) {
                            if (rs.isHome) {
                                btn.html("<i class='fa fa-check text-success'></i>")
                            } else {
                                btn.html("<i class='fas fa-times text-danger'></i>")
                            }
                        }
                    }
                });
            });

            //bật tắt hot
            $('body').on('click', '.btnHot', function (e) {
                //e.prevetDefault();
                var btn = $(this);
                var id = btn.data("id");
                $.ajax({
                    url: '@Url.Action("IsHot", "Products")',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {
                        if (rs.success) {
                            if (rs.isHot) {
                                btn.html("<i class='fa fa-check text-success'></i>")
                            } else {
                                btn.html("<i class='fas fa-times text-danger'></i>")
                            }
                        }
                    }
                });
            });


        });
    </script>
}

