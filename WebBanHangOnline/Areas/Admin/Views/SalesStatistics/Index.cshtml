@section scripts{
    <script src="~/Content/clients/plugins/chart.js/Chart.min.js"></script>
    <script src="~/Content/assets/plugins/moment/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script>
        $(function () {
            // Khởi tạo datepicker
            $('.datepicker').datepicker({
                format: 'dd/mm/yyyy',
                autoclose: true,
                todayHighlight: true
            });

            // Load dữ liệu ban đầu
            loadInitialData();
        });

        function loadInitialData() {
            $.ajax({
                url: '@Url.Action("GetStatistical", "SalesStatistics")',
                type: 'GET',
                data: { fromDate: '', toDate: '' },
                success: function (rs) {
                    updateChartAndTable(rs.Data);
                }
            });
        }

        function loadData() {
            var fromDate = $('#fromDate').val();
            var toDate = $('#toDate').val();

            // Kiểm tra nếu ngày hợp lệ
            if (!fromDate || !toDate) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Cảnh báo',
                    text: 'Vui lòng chọn đầy đủ ngày từ và ngày đến'
                });
                return;
            }

            $.ajax({
                url: '@Url.Action("GetStatistical", "SalesStatistics")',
                type: 'GET',
                data: {
                    fromDate: fromDate,
                    toDate: toDate
                },
                success: function (rs) {
                    if (rs.Data && rs.Data.length > 0) {
                        updateChartAndTable(rs.Data);
                    } else {
                        Swal.fire({
                            icon: 'info',
                            title: 'Thông báo',
                            text: 'Không có dữ liệu trong khoảng thời gian đã chọn'
                        });

                        // Xóa dữ liệu cũ
                        $('#load_data').html('');

                        // Reset biểu đồ
                        var barChartCanvas = $('#barChart').get(0).getContext('2d');
                        barChartCanvas.clearRect(0, 0, barChartCanvas.canvas.width, barChartCanvas.canvas.height);
                    }
                },
                error: function () {
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi',
                        text: 'Không thể tải dữ liệu. Vui lòng thử lại.'
                    });
                }
            });
        }

        function updateChartAndTable(data) {
            // Reset mảng
            var arrDoanhThu = [];
            var arrLoiNhuan = [];
            var arrDate = [];

            // Xử lý dữ liệu
            $.each(data, function (i, item) {
                var strDate = moment(item.Date).format('DD/MM/yyyy');
                arrDate.push(strDate);
                arrDoanhThu.push(item.DoanhThu);
                arrLoiNhuan.push(item.LoiNhuan);
            });

            // Cấu hình dữ liệu biểu đồ
            var areaChartData = {
                labels: arrDate,
                datasets: [
                    {
                        label: 'Lợi nhuận',
                        backgroundColor: 'rgba(60,141,188,0.9)',
                        borderColor: 'rgba(60,141,188,0.8)',
                        pointRadius: false,
                        pointColor: '#3b8bba',
                        pointStrokeColor: 'rgba(60,141,188,1)',
                        pointHighlightFill: '#fff',
                        pointHighlightStroke: 'rgba(60,141,188,1)',
                        data: arrLoiNhuan
                    },
                    {
                        label: 'Doanh thu',
                        backgroundColor: 'rgba(210, 214, 222, 1)',
                        borderColor: 'rgba(210, 214, 222, 1)',
                        pointRadius: false,
                        pointColor: 'rgba(210, 214, 222, 1)',
                        pointStrokeColor: '#c1c7d1',
                        pointHighlightFill: '#fff',
                        pointHighlightStroke: 'rgba(220,220,220,1)',
                        data: arrDoanhThu
                    },
                ]
            }

            // Vẽ lại biểu đồ
            var barChartCanvas = $('#barChart').get(0).getContext('2d')
            var barChartData = $.extend(true, {}, areaChartData)
            var temp0 = areaChartData.datasets[0]
            var temp1 = areaChartData.datasets[1]
            barChartData.datasets[0] = temp1
            barChartData.datasets[1] = temp0

            var barChartOptions = {
                responsive: true,
                maintainAspectRatio: false,
                datasetFill: false
            }

            // Xóa biểu đồ cũ nếu tồn tại
            Chart.helpers.each(Chart.instances, function (instance) {
                if (instance.chart.canvas.id === 'barChart') {
                    instance.destroy();
                }
            });

            // Tạo biểu đồ mới
            new Chart(barChartCanvas, {
                type: 'bar',
                data: barChartData,
                options: barChartOptions
            });

            // Cập nhật bảng
            var strHtml = "";
            $.each(data, function (i, item) {
                var strDate = moment(item.Date).format('DD/MM/yyyy');
                strHtml += "<tr>";
                strHtml += "<td>" + (i + 1) + "</td>";
                strHtml += "<td>" + strDate + "</td>";
                strHtml += "<td>" + item.DoanhThu.toLocaleString() + "</td>";
                strHtml += "<td>" + item.LoiNhuan.toLocaleString() + "</td>";
                strHtml += "</tr>";
            });
            $('#load_data').html(strHtml);
        }
    </script>

    
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}


