@model WebBanHangOnline.Models.EF.Size
@{
    ViewBag.Title = "Cập nhật kích thước sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/size" class="nav-link">Kích thước sản phẩm</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Cập nhật</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật kích thước sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Kích thước sản phẩm</a></li>
                    <li class="breadcrumb-item active">Cập nhật</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin cập nhật kích thước sản phẩm</h3>
        </div>
        <div class="card-body">
            @if (Model != null)
            {
                <div class="bs-stepper-content">
                    @using (Html.BeginForm("Edit", "Size", FormMethod.Post, new { }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(x => x.Id)
                        @Html.HiddenFor(x => x.CreatedDate)
                        <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Size</label>
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Size" })
                                @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Chiều rộng sản phẩm</label>
                                @Html.TextBoxFor(x => x.Width, new { @class = "form-control", @placeholder = "Chiều rộng sản phẩm" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Chiều dài sản phẩm</label>
                                @Html.TextBoxFor(x => x.Length, new { @class = "form-control", @placeholder = "Chiều dài sản phẩm" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Chiều cao phù hợp</label>
                                @Html.TextBoxFor(x => x.Height, new { @class = "form-control", @placeholder = "Chiều cao phù hợp" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Cân nặng phù hợp</label>
                                @Html.TextBoxFor(x => x.Weight, new { @class = "form-control", @placeholder = "Cân nặng phù hợp" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Đơn vị đo</label>
                                @Html.TextBoxFor(x => x.Measurement, new { @class = "form-control", @placeholder = "Đơn vị đo" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Thứ tự</label>
                                @Html.TextBoxFor(x => x.DisplayOrder, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Lưu</button>
                                <a href="/admin/size" class="btn btn-danger">Quay lại</a>
                            </div>
                        </div>

                    }

                </div>
            }
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

@section scripts{
    <script>
        $(document).ready(function () {
            CKEDITOR.replace('txtDetail', {
                customConfig: '/content/ckeditor/config.js',
                extraAllowedContent: 'span',
            });
        });
        function BrowseServer(field) {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                document.getElementById(field).value = fileUrl;
            };
            finder.popup();
        }
    </script>
}
