            //                    }
            //                }

            //            }
            //        });
            //});*@

            $('body').on('click', '.btnActive', function (e) {
                //e.prevetDefault();
                var btn = $(this);
                var id = btn.data("id");
                $.ajax({
                    //url: '/admin/category/IsActive',
                    url: '@Url.Action("IsActive", "News")',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {
                        if (rs.success) {
                            if (rs.isActive) {
                                btn.html("<i class='fa fa-check text-success'></i>")
                            } else {
                                btn.html("<i class='fas fa-times text-danger'></i>")
                            }
                        }
                    }
                }); 
            });
        });
    </script>
}


