<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<style>
    :root {
        --primary-color: #fe4c50;
        --primary-dark: #e63e41;
        --primary-light: #ff6b6d;
    }

    .contact-section {
        padding: 80px 0;
        background-color: #fff;
    }

    .contact-header {
        text-align: center;
        margin-bottom: 50px;
    }

    .contact-header h2 {
        color: var(--primary-color);
        font-size: 2.5rem;
        margin-bottom: 20px;
        font-weight: 600;
    }

    .contact-info-box {
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        height: 100%;
        transition: all 0.3s ease;
        border-bottom: 3px solid transparent;
    }

    .contact-info-box:hover {
        transform: translateY(-5px);
        border-bottom: 3px solid var(--primary-color);
    }

    .contact-icon {
        font-size: 2.5rem;
        color: var(--primary-color);
        margin-bottom: 20px;
    }

    .contact-info-title {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 15px;
        color: #333;
    }

    .contact-info-content {
        color: #666;
        line-height: 1.6;
    }

    .map-container {
        position: relative;
        overflow: hidden;
        padding-top: 56.25%;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        border: 3px solid var(--primary-color);
    }

    .map-container iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: 0;
    }

    .breadcrumb-section {
        background: #f8f8f8;
        padding: 15px 0;
        margin-bottom: 40px;
        border-bottom: 1px solid #eee;
    }

    .breadcrumb {
        background: none;
        margin: 0;
    }

    .breadcrumb-item a {
        color: var(--primary-color);
        text-decoration: none;
    }

    .breadcrumb-item.active {
        color: #666;
    }

    .social-links {
        margin-top: 20px;
    }

    .social-links a {
        display: inline-block;
        width: 40px;
        height: 40px;
        line-height: 40px;
        text-align: center;
        border-radius: 50%;
        background: var(--primary-color);
        color: white;
        margin: 0 5px;
        transition: all 0.3s ease;
    }

    .social-links a:hover {
        background: var(--primary-dark);
        transform: translateY(-3px);
    }

    /* Thêm animation pulse cho icons */
    .contact-icon {
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.1);
        }
        100% {
            transform: scale(1);
        }
    }
</style>

